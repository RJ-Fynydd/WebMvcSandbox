@using WebMvcSandbox.Models

@model IEnumerable<Entry>
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>My Test Sandbox</h1>
    <p class="lead">Welcome to my test sandbox! Here is where I test new things I learn in ASP.NET.</p>
</div>

<div class="row">
    <div class="col-lg-12">
        <h2>Database Data:</h2>
        <table class="table table-bordered table-responsive" id="myTable">
            <thead>
                <tr>
                    <th>Entry Id</th>
                    <th>Entry Name</th>
                    <th>Entry Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Entry entry in Model)
                {
                    <tr>
                        <td>@entry.EntryId</td>
                        <td>@Html.ActionLink(entry.EntryName, "UpdateEntries", new { entry.EntryId, entry.EntryName, entry.EntryNote })</td>
                        <td>@entry.EntryNote</td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Add Entry", "AddEntries", "Home", new { area = "" }, new { @class = "btn btn-custom" })
        </p>
    </div>
</div>

<hr />

